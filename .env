# ============================================
# GANADEROAPP - Environment Variables
# ============================================

# ==================== SERVER ====================
NODE_ENV=development
PORT=3001

# ==================== DATABASE ====================
# Development (SQLite)
DB_TYPE=sqlite
DB_PATH=./ganadero.db

# Production (PostgreSQL)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ganadero_app
# DB_USER=postgres
# DB_PASSWORD=your_password

# ==================== AUTHENTICATION ====================
JWT_SECRET=change_this_to_a_random_secure_string_minimum_32_chars
JWT_EXPIRY=30d

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:8080
API_URL=http://localhost:3001

# ==================== EMAIL (Future) ====================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# ==================== WHATSAPP ALERTS (Future) ====================
# WHATSAPP_API_KEY=your_api_key
# WHATSAPP_ENABLED=false

# ==================== FILE UPLOADS ====================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ==================== SENASA INTEGRATION (Future) ====================
# SENASA_API_URL=https://www.argentina.gob.ar/senasa/api
# SENASA_API_KEY=your_senasa_key

# ==================== ANALYTICS ====================
ENABLE_ANALYTICS=false
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ==================== DEVELOPMENT ====================
DEBUG=true
LOG_LEVEL=debug
